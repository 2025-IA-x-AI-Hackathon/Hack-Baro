{
  "name": "baro-monorepo",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "check-types": "pnpm run type-check",
    "clean": "rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx,json,css,scss,yml,yaml}\"",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate",
    "desktop:install:dev": "cross-env BARO_SKIP_ELECTRON_BUILDER=1 pnpm install",
    "desktop:dev": "pnpm --filter @baro/desktop dev",
    "desktop:package": "pnpm --filter @baro/desktop package"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/source-map-support": "^0.5.10",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "debug": "4.4.3"
    }
  }
}
