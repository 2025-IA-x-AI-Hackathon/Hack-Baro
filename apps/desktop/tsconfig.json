{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": ".erb/dll",
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@baro/*": [
        "../../packages/*/src",
        "../../packages/*/src/index.ts",
        "../../packages/*/src/index.tsx"
      ]
    }
  },
  "include": [
    "src",
    "e2e",
    ".erb/configs",
    ".erb/scripts",
    "assets/**/*.d.ts",
    "vitest.config.ts"
  ],
  "exclude": ["release/build", "release/app/dist", ".erb/dll"]
}
